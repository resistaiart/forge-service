#!/bin/bash
# Auto-update pyproject.toml + requirements using pip-tools
# Usage: ./chore/pyproject-update

set -euo pipefail

if ! command -v pip-compile &> /dev/null; then
  echo "âŒ pip-compile not found. Install with: pip install pip-tools"
  exit 1
fi

if [ ! -f "pyproject.toml" ]; then
  echo "âŒ pyproject.toml not found in repo root."
  exit 1
fi

if [ ! -f "requirements.in" ]; then
  echo "âŒ requirements.in missing. Create it to define base dependencies."
  exit 1
fi

echo "ğŸ”¨ Updating requirements.txt from requirements.in..."
pip-compile requirements.in --resolver=backtracking --upgrade

echo "ğŸ”¨ Syncing installed packages to match requirements.txt..."
pip-sync requirements.txt

echo "âœ… pyproject.toml and requirements synced with requirements.txt"
